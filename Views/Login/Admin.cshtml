@using ShoppingList.ViewModel
@model AdminLoginViewModel
@{
    Layout = "_LoginLayout";
}
<link rel="stylesheet" href="~/css/adminlogin.css" />

<div id="adminlogin">
    <div class="container">
        <div id="login-row" class="row justify-content-center align-items-center">
            <div id="login-column" class="col-md-6">
                <div id="login-box" class="col-md-12">
                    @using (Html.BeginForm(@*"Index", "Admin",*@ FormMethod.Post))
                    {
                        <h3 class="text-center text-info">Admin Paneline Giriş Yap</h3>
                        <br />
                        <div class="form-group">
                            <label for="username" class="text-info">Mail Adresi:</label><br>
                            <input type="email" name="adminemail" id="adminemail" asp-for=adminemail class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label for="adminpassword" class="text-info">Şifre:</label><br>
                            <input type="password" name="adminpassword" id="adminpassword" asp-for="adminpassword" class="form-control" title="Girin" required>
                            <i><span name="showText" id="showText" class="textShowPassword">Şifreyi Göster </span><i/><input type="checkbox" name="showPassword" id="showPassword" class="form-check-inline" />
                        </div>
                        <div class="form-group">
                            <input type="submit" name="submit" class="btn btn-info btn-md" value="Giriş Yap" @*asp-action="Index" asp-controller="admin"*@>
                        </div>
                    }
                    @TempData["ErrorMessage"]
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/js/adminlogin.js" asp-append-version="true"></script>
