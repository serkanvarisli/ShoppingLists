@model User

<link rel="stylesheet" href="~/css/register.css" />
@{
    Layout = "_LoginLayout";
}

<div id="main-wrapper" class="container">
    <div class="row justify-content-center">
        <div class="col-xl-10">
            <div class="card border-0">
                <div class="card-body p-0">
                    <div class="row no-gutters">
                        <div class="col-lg-6">
                            <div class="p-5">
                                <div class="mb-5">
                                    <h3 class="h4 font-weight-bold text-theme">Üye Ol</h3>
                                </div>
                                <form asp-action="Register" method="post">
                                    <div class="form-group">
                                        <label for="name">Ad</label>
                                        <input type="text" class="form-control" asp-for="UserName" id="name" required>
                                        @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        <label for="surname">Soyad</label>
                                        <input type="text" class="form-control" asp-for="UserSurname" id="surname" required>
                                        @Html.ValidationMessageFor(m => m.UserSurname, "", new { @class = "text-danger" })

                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Mail Adresi</label>
                                        <input type="email" class="form-control" asp-for="UserEmail" id="email" required>
                                        @Html.ValidationMessageFor(m => m.UserEmail, "", new { @class = "text-danger" })

                                    </div>
                                    <div class="form-group">
                                        <label for="password">Şifre</label>
                                        <input type="password" class="form-control" asp-for="Password" id="password" required>
                                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })

                                    </div>
                                    <div class="form-group">
                                        <label for="repassword">Şifre Tekrarı</label>
                                        <input type="password" class="form-control" id="repassword" asp-for="RePassword" required>
                                        @Html.ValidationMessageFor(m => m.RePassword, "", new { @class = "text-danger" })
                                        <br>

                                        <span name="showText" id="showText" class="textShowPassword">Şifreyi Göster </span>
                                        <input type="checkbox" name="showPassword" id="showPassword"  />
                                    </div>
                                    <button type="submit" class="btn btn-theme">Üye Ol</button>
                                    @TempData["Hata"]
                                    @TempData["Kayıt"]
                                   <div class="validation-summary">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                </div>
                                </form>
                               
                                
                            </div>
                        </div>

                        <div class="col-lg-6 d-none d-lg-inline-block">
                            <div class="account-block rounded-right">
                                <div class="overlay rounded-right"></div>
                                <div class="account-testimonial">
                                    <h4 class="text-white mb-4">Hesabınız var mı?</h4>
                                    <p class="text-muted text-center mt-3 mb-5">Hemen<a asp-action="Index" asp-controller="Login" class="text-primary ml-1">Giriş Yapın</a></p>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
                <!-- end card-body -->
            </div>
            <!-- end card -->
            <br />
            <br />
            <!-- end row -->
            <br />

        </div>
        <!-- end col -->
    </div>
    <!-- Row -->
</div>

<script src="~/js/register.js" asp-append-version="true"></script>
